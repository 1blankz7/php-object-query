{
    "name": "1blankz7/php-object-query",
    "description": "Quering object graphs in PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Blank",
            "email": "1blankz7@googlemail.com"
        }
    ],
    "require": {
        "symfony/property-access": "^4.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.2",
        "phpunit/phpunit": "^7.2",
        "phpstan/phpstan": "^0.10.1"
    },
    "autoload": {
        "psr-4": {
            "ObjectQuery\\": [
                "src"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ObjectQuery\\Test\\": [
                "tests"
            ]
        }
    },
    "scripts": {
        "check": [
            "phpcs",
            "phpstan analyse --level 7 src",
            "phpunit tests"
        ]
    }
}
